                        <a title="Download Document" style="text-decoration:underline;" href='@Url.Action("DownloadDocument", "Dashboard", new { folderPath = @ViewBag.Data.ReadableFilePath, folder = TEPL.QMS.Common.Constants.QMSConstants.DraftFolder, versionNo= @ViewBag.Data.DraftVersion, fileName= @ViewBag.Data.ReadableDocumentName })'><i class="menu-icon glyphicon glyphicon-download eye-open-font-size"></i></a>

                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label class="control-label col-lg-4"><strong>Document Description</strong><span class="mandatory">*</span></label>
                    <label class=" col-lg-8 control-label text-align-left">
                        <input title="Document Description" class="form-control manfield" id="DocumentDescription" name="Name"
                               type="text" value="@ViewBag.Data.DocumentDescription">
                    </label>
                </div>
                
            </div>
            <div class="col-lg-6 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label class="col-lg-5 control-label"><strong>Multiple Approvals Required?</strong></label>
                    <div class="col-lg-7">
                        <div class="row">
                            <div class="col-lg-3 col-sm-3 col-xs-3">
                                <div class="radio">
                                    <label>
                                        @if (ViewBag.Data.IsMultipleApprovers != null && ViewBag.Data.IsMultipleApprovers == true)
                                        {
                                            <input checked="checked" id="rbnYes" class="" name="form-field-radio" type="radio"><span class="text"> Yes</span>
                                        }
                                        else
                                        {
                                            <input id="rbnYes" class="" name="form-field-radio" type="radio"><span class="text"> Yes</span>
                                        }
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-4 col-sm-4 col-xs-4">
                                <div class="radio">
                                    <label>
                                        @if (ViewBag.Data.IsMultipleApprovers != null && ViewBag.Data.IsMultipleApprovers == false)
                                        {
                                            <input id="rbnNo" checked="checked" class="" name="form-field-radio" type="radio"><span class="text"> No</span>
                                        }
                                        else
                                        {
                                            <input id="rbnNo" class="" name="form-field-radio" type="radio"><span class="text"> No</span>
                                        }
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" id="divApprovers">
            <div class="col-lg-6 col-sm-6 col-xs-12">
                <div style="border: 1px #2dc3e8 solid;">
                    <div style="text-align: center; font-weight: bold; background: aliceblue;margin-bottom:3px;">Document Reviewers</div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Search User<span class="mandatory">*</span></label>
                        <div class="col-lg-6">
                            <input type="text" value="" class="form-control" name="searchword" id="txtDocReviewer" />
                        </div>
                        <div class="col-lg-1">
                            <button class="btn btn-azure" id="btnDocReviewers" type="button">Add</button>
                        </div>
                    </div>
                    <div>
                        <table class="table table-striped table-hover table-bordered" id="editabledatatable_Reviewers">
                            <thead>
                                <tr role="row">
                                    <th style="display:none;">ID</th>
                                    <th style="display:none;">LoginID</th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-sm-6 col-xs-12">
                <div style="border: 1px #2dc3e8 solid;">
                    <div style="text-align: center; font-weight: bold; background: aliceblue;margin-bottom:3px;">Document Approvers</div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Search User<span class="mandatory">*</span></label>
                        <div class="col-lg-6">
                            <input type="text" value="" class="form-control" name="searchword" id="txtDocApprover" />
                        </div>
                        <div class="col-lg-1">
                            <button class="btn btn-azure" id="btnDocApprovers" type="button">Add</button>
                        </div>
                    </div>
                    <div>
                        <table class="table table-striped table-hover table-bordered" id="editabledatatable_Approvers">
                            <thead>
                                <tr role="row">
                                    <th style="display:none;">ID</th>
                                    <th style="display:none;">LoginID</th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <br />
        </div>
        @if (@ViewBag.Data.DocumentPublishID.ToString() == "00000000-0000-0000-0000-000000000000")
        {
            <span></span>
        }
        else
        {
            <div class="row">
                <div class="col-lg-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="control-label col-lg-2" style=""><strong>Revision Reason</strong><span class="mandatory">*</span></label>
                        <label class=" col-lg-9 control-label text-align-left" style="">
                            <textarea class="form-control" rows="4" id="RevisionReason" style="resize:none;" placeholder="">@ViewBag.Data.RevisionReason</textarea>
                        </label>
                    </div>
                </div>
            </div>
        }

