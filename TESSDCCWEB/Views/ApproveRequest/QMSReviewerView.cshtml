        </div>*@

        </div>
        <div class="row">
            <div class="col-lg-6 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label class="control-label col-lg-4"><strong>Created By</strong></label>
                    <label class=" col-lg-8 control-label text-align-left">
                        @ViewBag.Data.UploadedUserName
                    </label>
                </div>
            </div>
            <div class="col-lg-6 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label class="control-label col-lg-5"><strong>Created On</strong></label>
                    <label class=" col-lg-7 control-label text-align-left">
                        @ViewBag.Data.CreatedDate
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label class="col-lg-4 control-label"><strong>Editable Document</strong></label>
                    <label class="col-lg-8 control-label text-align-left">
                        <span>@ViewBag.Data.EditableDocumentName</span>
                        &nbsp;&nbsp;
                        <a title="Download Document" style="text-decoration:underline;" href='@Url.Action("DownloadDocument", "Dashboard", new { folderPath = @ViewBag.Data.EditableFilePath, folder = TEPL.QMS.Common.Constants.QMSConstants.DraftFolder, versionNo= @ViewBag.Data.DraftVersion, fileName= @ViewBag.Data.EditableDocumentName })'><i class="menu-icon glyphicon glyphicon-download eye-open-font-size"></i></a>
                    </label>
                </div>                
            </div>
            <div class="col-lg-6 col-sm-6 col-xs-12">
