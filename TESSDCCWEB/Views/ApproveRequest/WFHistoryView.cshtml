<div class="widget-body">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div style="text-align: center; font-size: 16px; background-color: lightblue; padding-top: 5px; padding-bottom: 5px; color: black;">
                <strong>Workflow History</strong>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <br />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <table class="table table-striped table-hover table-bordered" id="editabledatatable">
                <thead>
                    <tr role="row">
                        <th>RNo</th>
                        <th>ID</th>
                        <th nowrap>
                            Stage
                        </th>
                        <th nowrap>
                            User
                        </th>
                        <th>
                            Approver Type
                        </th>
                        <th nowrap>
                            Date
                        </th>
                        <th nowrap>
                            Action
                        </th>
                        <th nowrap>
                            Status
                        </th>
                        <th>
                            Comments
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.Data.WorkflowStages != null)
                    {
                        foreach (var txt in ViewBag.Data.WorkflowStages)
                        {
                            <tr>
                                <td>@txt.RNo</td>
                                <td>@txt.ID</td>
                                <td nowrap>
                                    @if (@txt.StageName != null)
                                    {
                                        @txt.StageName
                                    }
                                    else
                                    {
                                        <span>QMS Admin</span>
                                    }
                                </td>
                                <td nowrap>@txt.ActionUserName</td>
                                <td>
                                    @if (@txt.StageName != null)
                                    {
                                        if (@txt.WFActionMandatory)
                                        {
                                            <span>Mandatory Approver</span>
                                        }
                                        else
                                        {
                                            <span>Default Approver</span>
                                        }
                                    }
                                    else
                                    {
                                        <span></span>
                                    }

                                </td>
                                <td nowrap>@txt.WFActionDate</td>
                                <td nowrap>@txt.WFAction</td>
                                <td nowrap>@txt.Status</td>
                                <td>
                                    @txt.ActionComments
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
