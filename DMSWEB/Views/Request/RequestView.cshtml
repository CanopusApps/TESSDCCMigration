                                            <textarea readonly="readonly" class="form-control" rows="4" id="txtComments" style="resize:none;" placeholder="Comments...">@ViewBag.Data.Comments</textarea>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>*@

                    @*<div class="row">
                            <br />
                            <div class="col-lg-12 col-sm-12 col-xs-12">
